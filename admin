#!/bin/sh

case $1 in

    test)
        RUST_BACKTRACE=1 cargo test && cargo run -- -t test-cases && cargo clippy
        ;;

    watch)
        RUST_BACKTRACE=1 watchexec -w src -w Cargo.toml -c -- "cargo test && cargo run -- -t test-cases && cargo clippy"
        ;;

    doc)
        cargo doc --open
        ;;

    count-lines)
        tokei
        ;;

esac
